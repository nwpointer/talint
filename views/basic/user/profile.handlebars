{{{link "back" "/user"}}}

<h1>{{username}}</h1>

{{#if owns}}
	<a href="/user/{{id}}/edit">edit</a>
{{/if}}

<ul>
	<li>
		<strong>firstname: </strong>
		{{firstname}}
	</li>
	<li>
		<strong>lastname: </strong>
		{{lastname}}
	</li>
	<li>
		<strong>email: </strong>
		{{email}}
	</li>
	<li>
		<strong>phone</strong>
		{{phone}}
	</li>
	<li>
		<strong>availability</strong>
		{{availability}} / 5
	</li>
	<li>
		<strong>location:</strong>
		{{location}}
	</li>
	<li>
		<strong>bio: </strong>
		<p>
			{{biography}}
		</p>
	</li>
</ul>

<h4>skills</h4>
<a href="/skillsets/{{skillset.0.id}}">edit skills</a>
<ul>
	{{#each skillset}}
		{{#each this.skills}}
			<li>{{this.name}}</li>
		{{/each}}
	{{/each}}
</ul>

