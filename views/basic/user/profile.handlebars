<script type="text/jsx">
	var App = React.createClass({
		getInitialState: function(){
		  return{
		    active: {
		      req:0,
		      skill:1,
		      qualification:0,
		    },
		    requirements:foo
		  }
		 },
		render: function(){
			var req = this.state.requirements;
			return(
				<section className="skill-profile">
					<RequirementsList req={req.skills} set="skills" headers="true"/>
					<RequirementsList req={req.qualifications} set="qualifications" headers="true"/>
					<li className="parent">
						<ul>
							<li className="parent-name"><h4>location</h4></li>
							<li className="child">
								<span className="type">l</span>
								{{location}}
							</li>
						</ul>
					</li>
				</section>
			);
		}
	});
</script>
<script type="text/jsx">
	React.render(
		<App />,
		document.getElementById('app')
	);
</script>
