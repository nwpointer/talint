<div class="block-white">
	<small class="fyi" >last sync: 9pm Aug, 35 records updated</small>
	<div class="grid-8">
		<div class="persona">
			<img class="face" src="/images/user.png" height="38" width="41" alt="">					
			<div class="identity">
				<h1 class='name'>
					{{firstname}} {{lastname}}
					<span id="star"></span>
				</h1>	
				<span class="title">
					{{title}}
				</span>

			</div>	
		</div>
	</div>
	<aside class="grid-4 right">
	<br><br>
	{{#if owns}}
		<a class="button green md" style="position: relative;left: .8rem;" href="/user/{{id}}/edit">edit profile</a>
	{{/if}}
	</aside>
</div>
<div class="block-white">
	<div id="discoverViewOnly"></div>

	<br>
</div>
<div class="block-white bd-top bio">
	<div class="grid-6">
		<div class="grid-6">
			<h4>email</h4>
			<p>{{email}}</p>
		</div>
		<div class="grid-6">
			<h4>phone</h4>
			<p>{{phone}}</p>
		</div>
		<div class="grid-6">
			<h4>linkdin</h4>
			{{#if linkdin}}
				<script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
				<script type="IN/MemberProfile" data-id="https://www.linkedin.com/in/{{linkdin}}" data-format="hover" data-text="quick view"></script>
			{{/if}}
			
		</div>
		<div class="grid-6">
			<h4>availability</h4>
			<p>{{availability}} / 5</p>

		</div>
	</div>
	<div class="grid-6">
		<h4>Bio</h4>
		<p>{{biography}}</p>
	</div>
</div>

