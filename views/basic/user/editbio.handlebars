<div class="block-white">

	<h1 class="center">Edit {{username}}</h1>

	<form class="center" action="/api/user/{{id}}" method="POST" id="userusedit">
		<label for="firstname">firstname</label> 
		<input class="field" type="text" name="firstname" value="{{firstname}}">

		<label for="lastname">lastname</label> 
		<input class="field" type="text" name="lastname" value="{{lastname}}">

		<label for="title">title</label> 
		<input class="field" type="text" name="title" value="{{title}}">

		<label for="email">email</label> 
		<input class="field" type="text" name="email" value="{{email}}">

		<label for="phone">phone</label> 
		<input class="field" type="num" name="phone" value="{{phone}}">

		<label for="linkdin">linkdin username</label> 
		<input class="field" type="text" name="linkdin" value="{{linkdin}}">

		<label for="availability">availability</label> 
		<input class="field" type="range" name="availability" min="0" max="5" value="{{availability}}">

		<label for="location">location</label> 
		<input class="field" type="num" name="location" value="{{location}}">


		<label for="biography">biography</label> 
		<textarea class="field" name="biography" id="biography" cols="30" rows="10">{{biography}}</textarea>
		<small>(limited to 260 characters)</small>

		<br>

		<input class="button btn-primary" type="submit">
	</form>

</div>